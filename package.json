{
  "name": "show-and-tell",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:amilajack/show-and-tell.git",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "parcel build ./src/index.html --public-url /show-and-tell",
    "deploy": "rm -rf dist && yarn build && gh-pages -d dist",
    "lint": "eslint . --ignore-path .gitignore",
    "spec": "jest",
    "start": "NODE_ENV=development parcel ./src/index.html --open",
    "start:api": "node ./src/api.js",
    "test": "yarn lint && yarn build && yarn spec"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-bliss": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "gh-pages": "^2.1.1",
    "jest-cli": "^24.9.0",
    "parcel-bundler": "^1.12.4"
  },
  "browserslist": [
    "chrome 70"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "grommet": "^2.9.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "bliss",
      "prettier/react"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "class-methods-use-this": "off",
      "flowtype-errors/show-errors": "off",
      "react/jsx-filename-extension": "off"
    }
  },
  "renovate": {
    "extends": [
      "bliss"
    ]
  }
}
